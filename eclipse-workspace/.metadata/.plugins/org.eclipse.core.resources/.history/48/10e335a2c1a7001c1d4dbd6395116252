
public class TestaPontoFlutuante {
	public static void main(String[] args) {
		
		double salario = 1250.70;
		System.out.println("Meu salário é R$" + salario);
		
		double divisao = 3.14 / 2;
		System.out.println("O resultado é = " + divisao);
		
		double outraDivisao = 5 / 2;
		System.out.println("O outro resultado com ponto flutuante é = " + outraDivisao);
		
		int outraDivisaoInt = 5 / 2;
		System.out.println("O resultado sem ponto flutuante é = " + outraDivisaoInt);
	}
}
