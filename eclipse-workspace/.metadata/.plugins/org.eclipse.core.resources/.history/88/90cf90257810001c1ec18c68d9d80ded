
public class TesteEscopo {

	public static void main(String[] args) {
		
		int idade = 20;
		int quantidadePessoas = 3;
		
		Boolean acompanhado = quantidadePessoas;
		
		if(acompanhado >= 2) {
			acompanhado = true;
		}
		else {
			acompanhado = false;
		}
		
		System.out.println("Valor de acompanhado = " + acompanhado);
	}
}
