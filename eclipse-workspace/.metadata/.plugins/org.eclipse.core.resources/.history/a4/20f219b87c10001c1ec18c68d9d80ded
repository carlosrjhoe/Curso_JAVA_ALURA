
public class TesteIR {

		public static void main(String[] args) {
			
			double salario = 2150.00;
			
			if (salario >= 1900.0 && salario <= 2800.0) {
				System.out.println("A sua aliquota é de 7.5%");
				System.out.println("pode deduzir na declaração o valor de R$ 142,00");
			}
			else if (salario >= 2800.01 && salario <= 3751.0) {
				System.out.println("A sua aliquota é de 15%");
				System.out.println("Você pode reduzir até R$350,00");
			}
			else {
				System.out.println("A sua aliquota é de 22,5%");
				System.out.println("Você pode reduzir até R$636.00");
			}
		}
}
